@model Product
@section Categories
{
@await Component.InvokeAsync("Categories")
}
<div class="card mb-3">
    <div class="card-body">
        <div class="row no-gutters">
            <div class="col-md-5">
                <img src="~/coverpage/@Model.ImageUrl" class="card-img" alt="">

            </div>
            <div class="col-md-7">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><small class="text-muted">İnce Kapak</small></p>
                <a href="">Yazar</a>
                <a href="">Yayınevi</a>
            </div>
        </div>
    </div>
</div>
