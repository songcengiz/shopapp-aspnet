@model List<Author>

<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Yazarlar</h1>
        <hr>

        <table data-page-length='5' id='myTable'  class="table table-striped table-bordered mt-3" style="width:100%">
            <thead>
                <tr>
                    <td>NAME</td>
                    
                    <td style="width: 160px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.Name</td>
                           

                            <td> <a asp-controller="author" asp-action="Details" asp-route-url="@item.Url"
                            class="btn btn-primary btn-sm mt-2">Details</a></td>

                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>Yazar bulunamadÄ±!</h3>
                    </div>

                }

            </tbody>

        </table>
    </div>


</div>