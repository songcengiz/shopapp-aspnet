@model List<Publisher>
<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Yayıncılar</h1>
        <hr>

        <table data-page-length='3' id='myTable'  class="table table-striped table-bordered mt-3" style="width:100%">
            <thead>
                <tr>
                    <td>Name</td>
                    <td> Appellation</td>

                    <td>Email</td>
                    <td>Website</td>
                    <td style="width: 160px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.Name</td>
                            <td>@item.Appellation</td>

                            <td>@item.Email</td>
                            <td>@item.Website</td>

                            <td> <a asp-controller="publisher" asp-action="Details" asp-route-url="@item.Url"
                            class="btn btn-primary btn-sm mt-2">Details</a></td>

                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>Yayıncı bulunamadı!</h3>
                    </div>

                }

            </tbody>

        </table>
    </div>


</div>